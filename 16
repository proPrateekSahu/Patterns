# print ('Hello World')

n=5


    1 
   1 2 
  1   3 
 1     4 
1 2 3 4 5 


for i in range (1,n+1):
    for k in range(n-i,0,-1):
        print(" ",end="")
    for j in range(1,i+1):
        if(j==1 or j==i or i==n):
            print(str(j)+" ",end="")
        else:
            print("  ",end="")
    print()
